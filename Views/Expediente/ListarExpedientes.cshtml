                                <div class="row g-0">
                                    <div class="col-auto" style="background-color: @color;">
                                        &nbsp; &nbsp;
                                    </div>
                                    <div class="col p-3">
                                        <div class="row">
                                            <div class="col">
                                                <b>@expediente.Asunto</b>
                                            </div>
                                            <div class="col-auto text-end">
                                                @{
                                                    var cliente = ExpedienteController._temp.Clientes.Where(e => e.IdClientes == expediente.IdCliente).FirstOrDefault();
