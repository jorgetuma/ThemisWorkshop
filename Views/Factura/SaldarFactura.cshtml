@{
    ViewData["Title"] = "Saldar Factura";
    @model FacturaViewModel
    var monto = Model.Factura.Costo;
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <form asp-controller="Factura" asp-action="Factura" method="post">
        <input type="hidden" value="@Model.Factura.IdFactura" name="id_factura">
        <div class="row m-0 g-3">
            <div class="col-auto fw-bold">
                <p class="m-0">Información del Abono (Monto actual: @monto):</p>
            </div>
        </div>
        <div class="row m-0 g-3">
            <div class="col">
                <div class="form-floating">
                    <input required type="number" class="form-control" id="abono" placeholder="0.00" value="0.00" name="abono" maxlength="100" step="0.01" min="0" max="@monto">
                    <label for="abono">Abono:</label>
                </div>
            </div>
        </div>
        <div class="row m-0 g-3">
            <div class="col">
                <div class="input-group d-flex justify-content-end">
                    <a href="/Factura/ListarFacturas/1" class="btn btn-negative">Cancelar</a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-positive" data-bs-toggle="modal" data-bs-target="#modal">Abonar</button>
                </div>

                <!-- Modal -->
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                            <div class="modal-content text-center">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5 mx-auto" id="modalLabel">Modificar Servicio</h1>
                                </div>
                                <div class="modal-body">
                                    <p class="m-0">¿Seguro que desea abonar CANTIDAD?</p>
                                </div>
                                <div class="modal-footer">
                                    <div class="input-group d-flex justify-content-center">
                                        <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-positive">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>