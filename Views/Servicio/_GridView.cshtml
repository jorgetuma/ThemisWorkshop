@{
    @model List<Servicio>
    @using ThemisWorkshop.Controllers;

    string color = "#4B4B4B";
}
<div class="row mb-3">
    <div class="col">
        <table class="table table-responsive table-hover" id="table">
            <tbody>
                @foreach (var servicio in Model)
                {
                    <tr>
                        <td>
                            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="@color" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                <circle cx="8" cy="8" r="8" />
                            </svg>
                            @servicio.Nombre<br>
                            <small style="color: #A3A2A5">@servicio.Descripcion</small>
                        </td>
                        <td class="align-middle" style="width: 2.5%;">
                            <a href="/Servicio/ModificarServicio/@servicio.IdServicio" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Modificar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#323232" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </a>
                        </td>
                        @{
                            if (servicio.IdServicio != 1)
                            {
                                <td class="align-middle" style="width: 2.5%;">
                                    <!-- Button trigger modal -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-square" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#exampleModal-@servicio.IdServicio">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal-@servicio.IdServicio" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                                            <div class="modal-content text-center">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5 mx-auto" id="exampleModalLabel">Eliminar Servicio</h1>
                                                </div>
                                                <div class="modal-body">
                                                    ¿Seguro que desea eliminar este registro?<br>
                                                    <b>@servicio.Nombre</b>
                                                </div>
                                                <div class="modal-footer">
                                                    <div class="input-group d-flex justify-content-center">
                                                        <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                                        <a href="/Servicio/EliminarServicio/@servicio.IdServicio" class="btn btn-positive">Aceptar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td class="align-middle" style="width: 2.5%;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#eec4b6" class="bi bi-x-square" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#exampleModal-@servicio.IdServicio">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>