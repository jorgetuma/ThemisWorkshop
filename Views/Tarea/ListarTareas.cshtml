    <script>
        function filter_cards() {
            var searchValue = document.getElementById('search_filter').value.toLowerCase();
            var cards = document.getElementsByClassName('card');

            for (var i = 0; i < cards.length; i++) {
                var card = cards[i];
                var cardContent = card.textContent || card.innerText;

                if (cardContent.toLowerCase().indexOf(searchValue) > -1) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            }
        }
    </script>
    <script>
        function filter_cards_2() {
            var selectedOption = document.getElementById("filter_combobox").value;
            var pendientesElements = document.querySelectorAll('[id="pendientes"]');
            var realizadosElements = document.querySelectorAll('[id="realizados"]');

            if (selectedOption === "0") {
                pendientesElements.forEach(function (element) {
                    element.style.display = "block";
                });

                realizadosElements.forEach(function (element) {
                    element.style.display = "none";
                });
            } else if (selectedOption === "1") {
                pendientesElements.forEach(function (element) {
                    element.style.display = "none";
                });

                realizadosElements.forEach(function (element) {
                    element.style.display = "block";
                });
            }
        }

        window.addEventListener('load', function () {
            filter_cards_2();
        });
    </script>
