@{
    ViewData["Title"] = "Agregar/Modificar Empleado";
    @model Usuario
    @if (Model == null) // Si no hay nada, significa que esta agregando un Empleado (Usuario)
    {
        ViewData["Title"] = "Registrar Empleado";
    }
    else // Si hay algo, significa que esta modificando un Empleado (Usuario)
    {
        ViewData["Title"] = "Modificar Empleado";
    }

    List<String> paises = new List<String>();
    paises.Add("República Dominicana");
    paises.Add("Estados Unidos");
    paises.Add("Cuba");
    paises.Add("Venezuela");
    paises.Add("Colombia");
    paises.Add("Haití");
    paises.Add("Otro");

    List<String> especialidades = new List<String>();
    especialidades.Add("Cívil");
    especialidades.Add("Penal");
    especialidades.Add("Laboral");
    especialidades.Add("Penal Laboral");
    especialidades.Add("Administrativo");
    especialidades.Add("Inmobiliario");
    especialidades.Add("Derecho Económico");
    especialidades.Add("Legislación Bancaria");
    especialidades.Add("Derecho Corportativo");
    especialidades.Add("Derecho Comercial");
    especialidades.Add("Derecho Internacional");
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    @if (Model == null)
    {
        <form asp-controller="Empleado" asp-action="AddEmpleado" method="post">
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Usuario:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="usuario" placeholder="usuario" value="" name="usuario" maxlength="50">
                        <label for="usuario">Usuario</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="password" class="form-control" id="password" placeholder="password" value="" name="password" maxlength="50">
                        <label for="password">Contraseña</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="password" class="form-control" id="password2" placeholder="password2" value="" name="password2" maxlength="50">
                        <label for="password2">Confirmar Contraseña</label>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-floating">
                        <select class="form-select" id="rol" name="rol">
                            <option selected value="2">Secretario</option>
                            <option value="1">Abogado</option>
                            <option value="0">Administrador</option>
                        </select>
                        <label for="rol">Rol</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información Laboral:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="number" class="form-control" id="sueldo" placeholder="sueldo" value="" name="sueldo">
                        <label for="sueldo">Sueldo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input disabled type="number" class="form-control" id="incentivo" placeholder="incentivo" value="" name="incentivo">
                        <label for="incentivo">Incentivo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input disabled type="number" class="form-control" id="comision" placeholder="comision" value="" name="comision">
                        <label for="comision">Comisión</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating">
                        <select disabled class="form-select" id="especialidad" name="especialidad">
                            @foreach (var especialidad in especialidades)
                            {
                                <option value="@especialidad">@especialidad</option>
                            }
                        </select>
                        <label for="especialidad">Especialidad</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Personal:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="nombre" placeholder="nombre" value="" name="nombre" maxlength="50">
                        <label for="nombre">Nombre</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="apellido" placeholder="apellido" value="" name="apellido" maxlength="50">
                        <label for="apellido">Apellido</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="docIdentidad" placeholder="docIdentidad" value="" name="docIdentidad" minlength="9" maxlength="11">
                        <label for="docIdentidad">Documento de Identidad</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="sexo" name="sexo">
                            <option selected value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                        </select>
                        <label for="sexo">Sexo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="nacionalidad" name="nacionalidad">
                            @foreach (var pais in paises)
                            {
                                <option value="@pais">@pais</option>
                            }
                        </select>
                        <label for="nacionalidad">Nacionalidad</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="estadoCivil" name="estadoCivil">
                            <option selected value="Soltero">Soltero</option>
                            <option value="Casado">Casado</option>
                        </select>
                        <label for="estadoCivil">Estado Cívil</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="date" class="form-control" id="fecha" placeholder="fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="fecha" timezone="-240">
                        <label for="fecha">Fecha de Nacimiento</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Contacto:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="direccion" placeholder="direccion" value="" name="direccion" maxlength="200">
                        <label for="direccion">Dirección</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="correo" placeholder="correo" value="" name="correo" maxlength="150">
                        <label for="correo">Correo Electrónico</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="tel" class="form-control" id="telefono" placeholder="telefono" value="" name="telefono" maxlength="15">
                        <label for="telefono">Teléfono</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="input-group d-flex justify-content-end">
                        <a href="/Empleado/ListarEmpleados/1" class="btn btn-negative">Cancelar</a>
                        <button type="submit" class="btn btn-positive">Registrar</button>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <form asp-controller="Empleado" asp-action="ModEmpleado" method="post">
            <input type="hidden" value="@Model.IdUsuario" name="id">
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Usuario:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="usuario" placeholder="usuario" value="@Model.UserName" name="usuario" maxlength="50">
                        <label for="usuario">Usuario</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="password" class="form-control" id="password" placeholder="password" value="@Model.Password" name="password" maxlength="50">
                        <label for="password">Contraseña</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="password" class="form-control" id="password2" placeholder="password2" value="@Model.Password" name="password2" maxlength="50">
                        <label for="password2">Confirmar Contraseña</label>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-floating">
                        <select class="form-select" id="rol" name="rol">
                            @if (Model.Rol == 2)
                            {
                                <option selected value="2">Secretario</option>
                                <option value="1">Abogado</option>
                                <option value="0">Administrador</option>
                            }
                            else if (Model.Rol == 1)
                            {
                                <option value="2">Secretario</option>
                                <option selected value="1">Abogado</option>
                                <option value="0">Administrador</option>
                            }
                            else
                            {
                                <option value="2">Secretario</option>
                                <option value="1">Abogado</option>
                                <option selected value="0">Administrador</option>
                            }
                        </select>
                        <label for="rol">Rol</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información Laboral:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="number" class="form-control" id="sueldo" placeholder="sueldo" value="@Model.Sueldo" name="sueldo" min="0">
                        <label for="sueldo">Sueldo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input disabled type="number" class="form-control" id="incentivo" placeholder="incentivo" value="@Model.Incentivo" name="incentivo" min="0">
                        <label for="incentivo">Incentivo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input disabled type="number" class="form-control" id="comision" placeholder="comision" value="@Model.Comision" name="comision" min="0">
                        <label for="comision">Comisión</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-floating">
                        <select disabled class="form-select" id="especialidad" name="especialidad">
                            @foreach (var especialidad in especialidades)
                            {
                                @if (especialidad.Equals(Model.Especialidad))
                                {
                                    <option selected value="@especialidad">@especialidad</option>
                                }
                                else
                                {
                                    <option value="@especialidad">@especialidad</option>
                                }
                            }
                        </select>
                        <label for="especialidad">Especialidad</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Personal:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="nombre" placeholder="nombre" value="@Model.Nombre" name="nombre" maxlength="50">
                        <label for="nombre">Nombre</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="apellido" placeholder="apellido" value="@Model.Apellido" name="apellido" maxlength="50">
                        <label for="apellido">Apellido</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="docIdentidad" placeholder="docIdentidad" value="@Model.Cedula" name="docIdentidad" minlength="9" maxlength="11">
                        <label for="docIdentidad">Documento de Identidad</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="sexo" name="sexo">
                            @if (Model.Sexo.Equals("Masculino"))
                            {
                                <option selected value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                            }
                            else
                            {
                                <option value="Masculino">Masculino</option>
                                <option selected value="Femenino">Femenino</option>
                            }
                        </select>
                        <label for="sexo">Sexo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="nacionalidad" name="nacionalidad">
                            @foreach (var pais in paises)
                            {
                                @if (pais.Equals(Model.Pais))
                                {
                                    <option selected value="@pais">@pais</option>
                                }
                                else
                                {
                                    <option value="@pais">@pais</option>
                                }
                            }
                        </select>
                        <label for="nacionalidad">Nacionalidad</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="estadoCivil" name="estadoCivil">
                            @if (Model.EstadoCivil.Equals("Soltero"))
                            {
                                <option selected value="Soltero">Soltero</option>
                                <option value="Casado">Casado</option>
                            }
                            else
                            {
                                <option value="Soltero">Soltero</option>
                                <option selected value="Casado">Casado</option>
                            }
                        </select>
                        <label for="estadoCivil">Estado Cívil</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        @{
                            string dataStr = Model.Fechanacimiento.ToString();
                            DateTime date = DateTime.Parse(dataStr);
                        }
                        <input required type="date" class="form-control" id="fecha" placeholder="fecha" value="@date.ToString("yyyy-MM-dd")" name="fecha" timezone="-240">
                        <label for="fecha">Fecha de Nacimiento</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Contacto:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="direccion" placeholder="direccion" value="@Model.Direccion" name="direccion" maxlength="250">
                        <label for="direccion">Dirección</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="correo" placeholder="correo" value="@Model.Correo" name="correo" maxlength="150">
                        <label for="correo">Correo Electrónico</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="tel" class="form-control" id="telefono" placeholder="telefono" value="@Model.Telefono" name="telefono" maxlength="15">
                        <label for="telefono">Teléfono</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="input-group d-flex justify-content-end">
                        <a href="/Empleado/ListarEmpleados/1" class="btn btn-negative">Cancelar</a>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-positive" data-bs-toggle="modal" data-bs-target="#exampleModal">Modificar</button>
                    </div>

                    <!-- Modal -->
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                                <div class="modal-content text-center">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5 mx-auto" id="exampleModalLabel">Modificar Cliente</h1>
                                    </div>
                                    <div class="modal-body">
                                        ¿Seguro que desea guardar los cambios?
                                    </div>
                                    <div class="modal-footer">
                                        <div class="input-group d-flex justify-content-center">
                                            <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-positive">Aceptar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    <script>
        function handleSelectChange() {
            const mySelect = document.getElementById("rol");
            const especialidadInput = document.getElementById("especialidad");
            const incentivoInput = document.getElementById("incentivo");
            const comisionInput = document.getElementById("comision");

            if (mySelect.value == 0 || mySelect.value == 1) {
                especialidadInput.disabled = false;
                incentivoInput.disabled = false;
                comisionInput.disabled = false;
                especialidadInput.required = true;
                incentivoInput.required = true;
                comisionInput.required = true;
            } else {
                especialidadInput.disabled = true;
                incentivoInput.disabled = true;
                comisionInput.disabled = true;
                especialidadInput.required = false;
                incentivoInput.required = false;
                comisionInput.required = false;
            }
        }

        const mySelect = document.getElementById("rol");
        mySelect.addEventListener("change", handleSelectChange);

        window.addEventListener("load", handleSelectChange);
    </script>
    <script>
        const passwordInput = document.getElementById("password");
        const confirmPasswordInput = document.getElementById("password2");

        passwordInput.addEventListener("input", validatePasswords);
        confirmPasswordInput.addEventListener("input", validatePasswords);

        function validatePasswords() {
            const passwordValue = passwordInput.value;
            const confirmPasswordValue = confirmPasswordInput.value;

            if (passwordValue === confirmPasswordValue) {
                passwordInput.classList.remove("is-invalid");
                confirmPasswordInput.classList.remove("is-invalid");
            } else {
                passwordInput.classList.add("is-invalid");
                confirmPasswordInput.classList.add("is-invalid");
            }
        }
    </script>
</body>
</html>