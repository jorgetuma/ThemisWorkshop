@{
    ViewData["Title"] = "Empleados";

    @using ThemisWorkshop.Controllers;
    @model List<Usuario> 

    int cantidadPag = EmpleadoController.ObtenerPaginasFronted(10);
    string color = "#4B4B4B";

    List<String> paises = new List<String>();
    paises.Add("República Dominicana");
    paises.Add("Estados Unidos");
    paises.Add("Cuba");
    paises.Add("Venezuela");
    paises.Add("Colombia");
    paises.Add("Haití");
    paises.Add("Otro");

    List<String> especialidades = new List<String>();
    especialidades.Add("Cívil");
    especialidades.Add("Penal");
    especialidades.Add("Laboral");
    especialidades.Add("Penal Laboral");
    especialidades.Add("Administrativo");
    especialidades.Add("Inmobiliario");
    especialidades.Add("Derecho Económico");
    especialidades.Add("Legislación Bancaria");
    especialidades.Add("Derecho Corportativo");
    especialidades.Add("Derecho Comercial");
    especialidades.Add("Derecho Internacional");
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="row my-3">
        <div class="col">
            <div class="input-group flex-nowrap">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>
                </span>
                <input type="text" class="form-control" id="searchInput" placeholder="Escribe para buscar..." onkeyup="filterTable()">
            </div>
        </div>
        <div class="col-auto ps-0">
            <a class="btn btn-positive" href="/Empleado/AgregarEmpleado" role="button">Registrar</a>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <table class="table table-responsive table-hover border" id="table">
                <tbody>
                    @{
                        foreach (var empleado in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        if (empleado.Sexo.Equals("Masculino"))
                                        {
                                            color = "#B4D2E4";
                                        }
                                        else
                                        {
                                            color = "#E4ADC8";
                                        }
                                    }
                                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="@color" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="8" />
                                    </svg>
                                    @empleado.Nombre @empleado.Apellido <br>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                    </svg>
                                    <span class="badge" style="background-color: @color;">
                                        @empleado.Correo
                                    </span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                                        <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                    </svg>
                                    <span class="badge" style="background-color: @color;">
                                        @empleado.Telefono
                                    </span>
                                </td>
                                <td>
                                    @empleado.Cedula<br>
                                    <small style="color: #A3A2A5">@empleado.Pais</small>
                                </td>
                                @{
                                    if (empleado.Rol == 0 || empleado.Rol == 1)
                                    {
                                        <td class="align-middle">
                                            Abogado
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="align-middle">
                                            Secretario
                                        </td>
                                    }
                                }
                                <td class="align-middle" style="width: 2.5%;">
                                    <!-- Button trigger modal -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-eye" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#modal-@empleado.IdUsuario">
                                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                    </svg>

                                    <!-- Modal -->
                                    <div class="modal fade" id="modal-@empleado.IdUsuario" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered d-flex align-items-center" style="width: 80%; max-width: 1200px;">
                                            <div class="modal-content text-center">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5 mx-auto" id="modalLabel">Examinando Empleado</h1>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row m-0 g-3">
                                                        <div class="col-auto fw-bold">
                                                            Información de Usuario:
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="text" class="form-control" id="usuario" placeholder="usuario" value="@empleado.UserName" name="usuario" maxlength="50">
                                                                <label for="usuario">Usuario</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="password" class="form-control" id="password" placeholder="password" value="@empleado.Password" name="password" maxlength="50">
                                                                <label for="password">Contraseña</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="password" class="form-control" id="password2" placeholder="password2" value="@empleado.Password" name="password2" maxlength="50">
                                                                <label for="password2">Confirmar Contraseña</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-2">
                                                            <div class="form-floating">
                                                                <select disabled class="form-select" id="rol" name="rol">
                                                                    @if (empleado.Rol == 2)
                                                                    {
                                                                        <option selected value="2">Secretario</option>
                                                                        <option value="1">Abogado</option>
                                                                        <option value="0">Administrador</option>
                                                                    }
                                                                    else if (empleado.Rol == 1)
                                                                    {
                                                                        <option value="2">Secretario</option>
                                                                        <option selected value="1">Abogado</option>
                                                                        <option value="0">Administrador</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="2">Secretario</option>
                                                                        <option value="1">Abogado</option>
                                                                        <option selected value="0">Administrador</option>
                                                                    }
                                                                </select>
                                                                <label for="rol">Rol</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col-auto fw-bold">
                                                            Información Laboral:
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="number" class="form-control" id="sueldo" placeholder="sueldo" value="@empleado.Sueldo" name="sueldo" min="0">
                                                                <label for="sueldo">Sueldo</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="number" class="form-control" id="incentivo" placeholder="incentivo" value="@empleado.Incentivo" name="incentivo" min="0">
                                                                <label for="incentivo">Incentivo</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="number" class="form-control" id="comision" placeholder="comision" value="@empleado.Comision" name="comision" min="0">
                                                                <label for="comision">Comisión</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-4">
                                                            <div class="form-floating">
                                                                <select disabled class="form-select" id="especialidad" name="especialidad">
                                                                    @foreach (var especialidad in especialidades)
                                                                    {
                                                                        @if (especialidad.Equals(empleado.Especialidad))
                                                                        {
                                                                            <option selected value="@especialidad">@especialidad</option>
                                                                        }
                                                                        else
                                                                        {
                                                                            <option value="@especialidad">@especialidad</option>
                                                                        }
                                                                    }
                                                                </select>
                                                                <label for="especialidad">Especialidad</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col-auto fw-bold">
                                                            Información de Personal:
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="text" class="form-control" id="nombre" placeholder="nombre" value="@empleado.Nombre" name="nombre" maxlength="50">
                                                                <label for="nombre">Nombre</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="text" class="form-control" id="apellido" placeholder="apellido" value="@empleado.Apellido" name="apellido" maxlength="50">
                                                                <label for="apellido">Apellido</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="text" class="form-control" id="docIdentidad" placeholder="docIdentidad" value="@empleado.Cedula" name="docIdentidad" minlength="9" maxlength="11">
                                                                <label for="docIdentidad">Documento de Identidad</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <select disabled class="form-select" id="sexo" name="sexo">
                                                                    @if (empleado.Sexo.Equals("Masculino"))
                                                                    {
                                                                        <option selected value="Masculino">Masculino</option>
                                                                        <option value="Femenino">Femenino</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="Masculino">Masculino</option>
                                                                        <option selected value="Femenino">Femenino</option>
                                                                    }
                                                                </select>
                                                                <label for="sexo">Sexo</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <select disabled class="form-select" id="nacionalidad" name="nacionalidad">
                                                                    @foreach (var pais in paises)
                                                                    {
                                                                        @if (pais.Equals(empleado.Pais))
                                                                        {
                                                                            <option selected value="@pais">@pais</option>
                                                                        }
                                                                        else
                                                                        {
                                                                            <option value="@pais">@pais</option>
                                                                        }
                                                                    }
                                                                </select>
                                                                <label for="nacionalidad">Nacionalidad</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <select disabled class="form-select" id="estadoCivil" name="estadoCivil">
                                                                    @if (empleado.EstadoCivil.Equals("Soltero"))
                                                                    {
                                                                        <option selected value="Soltero">Soltero</option>
                                                                        <option value="Casado">Casado</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="Soltero">Soltero</option>
                                                                        <option selected value="Casado">Casado</option>
                                                                    }
                                                                </select>
                                                                <label for="estadoCivil">Estado Cívil</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                @{
                                                                    string dataStr = empleado.Fechanacimiento.ToString();
                                                                    DateTime date = DateTime.Parse(dataStr);
                                                                }
                                                                <input disabled type="date" class="form-control" id="fecha" placeholder="fecha" value="@date.ToString("yyyy-MM-dd")" name="fecha" timezone="-240">
                                                                <label for="fecha">Fecha de Nacimiento</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col-auto fw-bold">
                                                            Información de Contacto:
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="text" class="form-control" id="direccion" placeholder="direccion" value="@empleado.Direccion" name="direccion" maxlength="250">
                                                                <label for="direccion">Dirección</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row m-0 g-3">
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="text" class="form-control" id="correo" placeholder="correo" value="@empleado.Correo" name="correo" maxlength="150">
                                                                <label for="correo">Correo Electrónico</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-floating">
                                                                <input disabled type="tel" class="form-control" id="telefono" placeholder="telefono" value="@empleado.Telefono" name="telefono" maxlength="15">
                                                                <label for="telefono">Teléfono</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <div class="input-group d-flex justify-content-center">
                                                        <button type="button" class="btn btn-positive" data-bs-dismiss="modal">Cerrar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle" style="width: 2.5%;">
                                    <a href="/Empleado/ModificarEmpleado/@empleado.IdUsuario" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Modificar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#323232" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>
                                </td>
                                <td class="align-middle" style="width: 2.5%;">
                                    <!-- Button trigger modal -->
                                    @{
                                        if (empleado.Rol == 0)
                                        {
                                            <a href="#" class="btn-disabled">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#eec4b6" class="bi bi-x-square" viewBox="0 0 16 16">
                                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                                </svg>
                                            </a>
                                        }
                                        else
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-square" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#modal2-@empleado.IdUsuario">
                                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                            </svg>
                                        }
                                    }
                                    <!-- Modal -->
                                    <div class="modal fade" id="modal2-@empleado.IdUsuario" tabindex="-1" aria-labelledby="modal2Label" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                                            <div class="modal-content text-center">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5 mx-auto" id="modal2Label">Eliminar Empleado</h1>
                                                </div>
                                                <div class="modal-body">
                                                    Â¿Seguro que desea eliminar este registro?<br>
                                                    <b>@empleado.Nombre @empleado.Apellido</b>
                                                </div>
                                                <div class="modal-footer">
                                                    <div class="input-group d-flex justify-content-center">
                                                        <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                                        <a href="/Empleado/EliminarEmpleado/@empleado.IdUsuario" class="btn btn-positive">Aceptar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @{
        if (cantidadPag > 1)
        {
            <div class="row">
                <div class="col d-flex justify-content-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="/Empleado/ListarEmpleados/1" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @{
                                for (int i = 1; i <= cantidadPag; i++)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Empleado/ListarEmpleados/@i">@i</a>
                                    </li>
                                }
                            }
                            <li class="page-item">
                                <a class="page-link" href="/Empleado/ListarEmpleados/@cantidadPag" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
    <script>
        function filterTable() {
            var input, filter, table, tr, td, i, j, visible;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("table");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                visible = false;
                if (tr[i].getElementsByTagName("th").length == 0) {
                    td = tr[i].getElementsByTagName("td");
                    for (j = 0; j < td.length; j++) {
                        if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
                            visible = true;
                        }
                    }
                } else {
                    visible = true;
                }
                if (visible) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    </script>
</body>
</html>