@{
    @using ThemisWorkshop.Controllers;
    ViewData["Title"] = "Consultas";
    @model List<Consulta> 
    int cantidadPag = ConsultaController.ObtenerPaginasFronted(10) + 1;

    List<String> colors = new List<String>();
    colors.Add("#CC99C9");
    colors.Add("#9EC1CF");
    colors.Add("#9EE09E");
    colors.Add("#FDFD97");
    colors.Add("#FEB144");
    colors.Add("#FF6663");
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="row my-3">
        <div class="col">
            <input type="text" class="form-control" id="search_filter" placeholder="Escribe para buscar..." value="" required="" onkeyup="filter_cards()">
        </div>
    </div>
    <div class="row my-3">
        <div class="col">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var consulta in Model)
                {
                    Random random = new Random();
                    int index = random.Next(colors.Count);
                    string randomColor = colors[index];

                    var cita = ConsultaController._temp.Cita.Where(e => e.IdCita == consulta.IdCita).First();

                    <div class="col">
                        <div class="card mb-3" style="border-color:@randomColor">
                            <div class="card-body p-0">
                                <div class="row g-0">
                                    <div class="col-auto" style="background-color: @randomColor">
                                        &nbsp; &nbsp;
                                    </div>
                                    <div class="col p-3">
                                        <div class="row">
                                            <div class="col">
                                                <b>@cita.Asunto</b>
                                            </div>
                                            <div class="col-auto text-end">
                                                @{
                                                    var cliente = ConsultaController._temp.Clientes.Where(e => e.IdClientes == cita.IdCliente).FirstOrDefault();
                                                }
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                                </svg>
                                                @if (randomColor.Equals("#FDFD97"))
                                                {
                                                    <span class="badge" style="background-color: @randomColor; color: #4B4B4B">
                                                        @cliente.Nombre @cliente.Apellido
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge" style="background-color: @randomColor">
                                                        @cliente.Nombre @cliente.Apellido
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <small>@cita.Descripcion</small><br>
                                        <div class="row">
                                            <div class="col">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm" viewBox="0 0 16 16">
                                                    <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z" />
                                                    <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z" />
                                                </svg>
                                                @if (randomColor.Equals("#FDFD97"))
                                                {
                                                    <span class="badge" style="background-color: @randomColor; color: #4B4B4B">
                                                        @cita.Fecha.ToShortDateString() @cita.HoraInicial - @consulta.HoraFinal
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge" style="background-color: @randomColor">
                                                        @cita.Fecha.ToShortDateString() @cita.HoraInicial - @consulta.HoraFinal
                                                    </span>
                                                }
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                                </svg>
                                                @if (randomColor.Equals("#FDFD97"))
                                                {
                                                    <span class="badge" style="background-color: @randomColor; color: #4B4B4B">
                                                        @cita.Lugar
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge" style="background-color: @randomColor">
                                                        @cita.Lugar
                                                    </span>
                                                }
                                            </div>
                                            <div class="col-auto text-end">
                                                <!-- Trigger modal -->
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-square" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#modal-@consulta.IdConsulta">
                                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                                </svg>
                                                <!-- Modal -->
                                                <div class="modal fade" id="modal-@consulta.IdConsulta" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                                                        <div class="modal-content text-center">
                                                            <div class="modal-header">
                                                                <h1 class="modal-title fs-5 mx-auto" id="modalLabel">Eliminar Cita</h1>
                                                            </div>
                                                            <div class="modal-body">
                                                                ¿Seguro que desea eliminar este registro?<br>
                                                                <b>@cita.Asunto</b>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <div class="input-group d-flex justify-content-center">
                                                                    <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                                                    <a href="/Factura/CAMBIAR/-1/-1/@consulta.IdConsulta" class="btn btn-positive">Aceptar</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @if (cantidadPag > 1)
    {
        <div class="row">
            <div class="col d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="/Consulta/ListarConsults/1" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= cantidadPag; i++)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Consulta/ListarConsults/@i">@i</a>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="/Consulta/ListarConsults/@cantidadPag" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }

    <script>
        function filter_cards() {
            var searchValue = document.getElementById('search_filter').value.toLowerCase();
            var cards = document.getElementsByClassName('card');

            for (var i = 0; i < cards.length; i++) {
                var card = cards[i];
                var cardContent = card.textContent || card.innerText;

                if (cardContent.toLowerCase().indexOf(searchValue) > -1) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            }
        }
    </script>
</body>
</html>