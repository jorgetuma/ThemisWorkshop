@{
    @using ThemisWorkshop.Controllers;
    ViewData["Title"] = "Consultas";
    @model List<Consulta> 
    int cantidadPag = ConsultaController.ObtenerPaginasFronted(10) + 1;

    List<String> colors = new List<String>();
    colors.Add("#CC99C9");
    colors.Add("#9EC1CF");
    colors.Add("#9EE09E");
    colors.Add("#FDFD97");
    colors.Add("#FEB144");
    colors.Add("#FF6663");
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="row my-3">
        <div class="col">
            <input type="text" class="form-control" id="search_filter" placeholder="Escribe para buscar..." value="" required="" onkeyup="filter_table()">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col">
            <table class="table table-responsive table-hover" id="table">
                <tbody>
                    @foreach (var consulta in Model)
                    {
                        var cita = ConsultaController._temp.Cita.Where(e => e.IdCita == consulta.IdCita).First();

                        <tr id="head">
                            <td colspan="2"><b>@cita.Fecha.ToShortDateString()</b> @cita.HoraInicial - @cita.HoraFinal</td>
                            <td colspan="2" class="text-end">@cita.Lugar</td>
                        </tr>
                        <tr id="body">
                            @{
                                var cliente = ConsultaController._temp.Clientes.Where(e => e.IdClientes == cita.IdCliente).First();
                            }
                            <td style="width: 2.5%;">
                                @{
                                    Random random = new Random();
                                    int index = random.Next(colors.Count);
                                    string randomColor = colors[index];
                                }
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="@randomColor" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </td>
                            <td>
                                @cita.Asunto
                            </td>
                            <td class="text-end">@cliente.Nombre @cliente.Apellido</td>
                            <td style="width: 2.5%;">
                                <!-- Button trigger modal -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-square" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#exampleModal-@consulta.IdConsulta">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                </svg>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal-@consulta.IdConsulta" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                                        <div class="modal-content text-center">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5 mx-auto" id="exampleModalLabel">Eliminar Consulta</h1>
                                            </div>
                                            <div class="modal-body">
                                                ¿Seguro que desea eliminar este registro?<br>
                                                <b>@cita.Asunto</b>
                                            </div>
                                            <div class="modal-footer">
                                                <div class="input-group d-flex justify-content-center">
                                                    <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                                    <a href="/Consulta/EliminarConsulta/@consulta.IdConsulta" class="btn btn-positive">Aceptar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (cantidadPag > 1)
    {
        <div class="row">
            <div class="col d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="/Consulta/ListarConsults/1" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= cantidadPag; i++)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Consulta/ListarConsults/@i">@i</a>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="/Consulta/ListarConsults/@cantidadPag" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    <script>
        function filter_table() {
            var input, filter, table, tr, td, i, j, visible;
            input = document.getElementById("search_filter");
            filter = input.value.toUpperCase();
            table = document.getElementById("table");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                visible = false;
                if (tr[i].id === "head" || tr[i].id === "body") {
                    var siblingRow = tr[i].nextElementSibling;
                    td = tr[i].getElementsByTagName("td");
                    for (j = 0; j < td.length; j++) {
                        if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
                            visible = true;
                            break;
                        }
                    }
                    if (!visible && siblingRow && siblingRow.id === "body") {
                        td = siblingRow.getElementsByTagName("td");
                        for (j = 0; j < td.length; j++) {
                            if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
                                visible = true;
                                break;
                            }
                        }
                    }
                } else {
                    visible = true;
                }
                if (visible) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    </script>
</body>
</html>