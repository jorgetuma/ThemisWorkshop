@{
    ViewData["Title"] = "Clientes";
    @model  List<Cliente> 
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Clientes</title>

    <style>
        .btn-crear {
            background-color: #0E58C4;
            color: #FFFFFF;
            width: 8rem;
            height: 2.5rem;
        }

        .modal-backdrop {
            display: none;
        }
    </style>
</head>

<body>
    <div style="height: 4rem; padding-top: 1rem">
        <h1 style="float: left"><b>C</b>lientes</h1>
        <a href="/Cliente/AgregarCliente" type="button" class="btn btn-crear" style="float: right; margin-top: 0.25rem">+ Registrar</a>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="myInput" onkeyup="filterTable()" placeholder="Escribe para buscar...">
    </div>

    <table class="table table-hover table-responsive" style="max-width: 100%; overflow-x: auto;" id="myTable">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Documento de Identidad</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Fecha De Nacimiento</th>
                <th>Nacionalidad</th>
                <th>Sexo</th>
                <th>Estado Cívil</th>
                <th>Dirección</th>
                <th>Crédito</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var cliente in Model) {
            <tr>
                    <td>@Html.DisplayFor(m=>cliente.Nombre)</td>
                    <td>@Html.DisplayFor(m=>cliente.Apellido)</td>
                    <td>@Html.DisplayFor(m=>cliente.Cedula)</td>
                    <td>@Html.DisplayFor(m=>cliente.Correo)</td>
                    <td>@Html.DisplayFor(m=>cliente.Telefono)</td>
                    <td>@Html.DisplayFor(m=>cliente.Fechanacimiento,new { format = "dd-MM-yyyy" })</td>
                    <td>@Html.DisplayFor(m=>cliente.Pais)</td>
                    <td>@Html.DisplayFor(m=>cliente.Sexo)</td>
                    <td>@Html.DisplayFor(m=>cliente.EstadoCivil)</td>
                    <td>@Html.DisplayFor(m=>cliente.Direccion)</td>
                    <td>@Html.DisplayFor(m=>cliente.Credito)</td>
                <td>
                        <a href="#"><img src="/img/delete_icon.png" style="width: 16px; height: 16px;"  data-bs-toggle="modal" data-bs-target="#exampleModal-@cliente.IdClientes" /></a>
                       
                        <div class="modal fade" id="exampleModal-@cliente.IdClientes" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" style="text-align: center">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel"><b>E</b>liminar <b>C</b>liente</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>¿Seguro que desea eliminar este registro?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/Cliente/EliminarCliente/@cliente.IdClientes" class="btn btn-crear">Confirmar</a>
                                        <button type="button" class="btn btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                          
                </td>
                <td>
                        <a href="/Cliente/ModificarCliente/@cliente.IdClientes"><img src="/img/edit_icon.png" style="width: 16px; height: 16px;" /></a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <script>
        function filterTable() {
            var input, filter, table, tr, td, i, j, visible;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                visible = false;
                if (tr[i].getElementsByTagName("th").length == 0) {
                    td = tr[i].getElementsByTagName("td");
                    for (j = 0; j < td.length; j++) {
                        if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
                            visible = true;
                        }
                    }
                } else {
                    visible = true;
                }
                if (visible) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    </script>
</body>
</html>