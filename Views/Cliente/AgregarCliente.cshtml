@{
    ViewData["Title"] = "Agregar/Modificar Cliente";
    @model Cliente
    @if (Model == null) // Si no hay nada, significa que esta agregando un Cliente
    {
        ViewData["Title"] = "Registrar Cliente";
    }
    else // Si hay algo, significa que esta modificando un Cliente
    {
        ViewData["Title"] = "Modificar Cliente";
    }

    List<String> paises = new List<String>();
    paises.Add("República Dominicana");
    paises.Add("Estados Unidos");
    paises.Add("Cuba");
    paises.Add("Venezuela");
    paises.Add("Colombia");
    paises.Add("Haití");
    paises.Add("Otro");
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    @if (Model == null)
    {
        <form asp-controller="Cliente" asp-action="AddCliente" method="post">
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Personal:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="nombre" placeholder="nombre" value="" name="nombre" maxlength="50">
                        <label for="nombre">Nombre</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="apellido" placeholder="apellido" value="" name="apellido" maxlength="50">
                        <label for="apellido">Apellido</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="docIdentidad" placeholder="docIdentidad" value="" name="docIdentidad" minlength="9" maxlength="11">
                        <label for="docIdentidad">Documento de Identidad</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="sexo" name="sexo">
                            <option selected value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                        </select>
                        <label for="sexo">Sexo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="nacionalidad" name="nacionalidad">
                            @foreach (var pais in paises)
                            {
                                <option value="@pais">@pais</option>
                            }
                        </select>
                        <label for="nacionalidad">Nacionalidad</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="estadoCivil" name="estadoCivil">
                            <option selected value="Soltero">Soltero</option>
                            <option value="Casado">Casado</option>
                        </select>
                        <label for="estadoCivil">Estado Cívil</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="date" class="form-control" id="fecha" placeholder="fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="fecha" timezone="-240">
                        <label for="fecha">Fecha de Nacimiento</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Contacto:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="direccion" placeholder="direccion" value="" name="direccion" maxlength="200">
                        <label for="direccion">Dirección</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="correo" placeholder="correo" value="" name="correo" maxlength="150">
                        <label for="correo">Correo Electrónico</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="tel" class="form-control" id="telefono" placeholder="telefono" value="" name="telefono" maxlength="15">
                        <label for="telefono">Teléfono</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="input-group d-flex justify-content-end">
                        <a href="/Cliente/ListarClientes/1" class="btn btn-negative">Cancelar</a>
                        <button type="submit" class="btn btn-positive">Registrar</button>
                    </div>
                </div>
            </div> 
        </form>
    }
    else
    {
        <form asp-controller="Cliente" asp-action="ModCliente" method="post">
            <input type="hidden" value="@Model.IdClientes" name="id">
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Personal:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="nombre" placeholder="nombre" value="@Model.Nombre" name="nombre" maxlength="50">
                        <label for="nombre">Nombre</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="apellido" placeholder="apellido" value="@Model.Apellido" name="apellido" maxlength="50">
                        <label for="apellido">Apellido</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="docIdentidad" placeholder="docIdentidad" value="@Model.Cedula" name="docIdentidad" minlength="9" maxlength="11">
                        <label for="docIdentidad">Documento de Identidad</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="sexo" name="sexo">
                            @if (Model.Sexo.Equals("Masculino"))
                            {
                                <option selected value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                            }
                            else
                            {
                                <option value="Masculino">Masculino</option>
                                <option selected value="Femenino">Femenino</option>
                            }
                        </select>
                        <label for="sexo">Sexo</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="nacionalidad" name="nacionalidad">
                            @foreach (var pais in paises)
                            {
                                @if (pais.Equals(Model.Pais))
                                {
                                    <option selected value="@pais">@pais</option>
                                }
                                else
                                {
                                    <option value="@pais">@pais</option>
                                }
                            }
                        </select>
                        <label for="nacionalidad">Nacionalidad</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="estadoCivil" name="estadoCivil">
                            @if (Model.EstadoCivil.Equals("Soltero"))
                            {
                                <option selected value="Soltero">Soltero</option>
                                <option value="Casado">Casado</option>
                            }
                            else
                            {
                                <option value="Soltero">Soltero</option>
                                <option selected value="Casado">Casado</option>
                            }
                        </select>
                        <label for="estadoCivil">Estado Cívil</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        @{
                            string dataStr = Model.Fechanacimiento.ToString();
                            DateTime date = DateTime.Parse(dataStr);
                        }
                        <input required type="date" class="form-control" id="fecha" placeholder="fecha" value="@date.ToString("yyyy-MM-dd")" name="fecha" timezone="-240">
                        <label for="fecha">Fecha de Nacimiento</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col-auto fw-bold">
                    Información de Contacto:
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="direccion" placeholder="direccion" value="@Model.Direccion" name="direccion" maxlength="250">
                        <label for="direccion">Dirección</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input required type="text" class="form-control" id="correo" placeholder="correo" value="@Model.Correo" name="correo" maxlength="150">
                        <label for="correo">Correo Electrónico</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input required type="tel" class="form-control" id="telefono" placeholder="telefono" value="@Model.Telefono" name="telefono" maxlength="15">
                        <label for="telefono">Teléfono</label>
                    </div>
                </div>
            </div>
            <div class="row m-0 g-3">
                <div class="col">
                    <div class="input-group d-flex justify-content-end">
                        <a href="/Cliente/ListarClientes/1" class="btn btn-negative">Cancelar</a>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-positive" data-bs-toggle="modal" data-bs-target="#exampleModal">Modificar</button>
                    </div>

                    <!-- Modal -->
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered d-flex align-items-center">
                                <div class="modal-content text-center">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5 mx-auto" id="exampleModalLabel">Modificar Cliente</h1>
                                    </div>
                                    <div class="modal-body">
                                        ¿Seguro que desea guardar los cambios?
                                    </div>
                                    <div class="modal-footer">
                                        <div class="input-group d-flex justify-content-center">
                                            <button type="button" class="btn btn-negative" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-positive">Aceptar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</body>
</html>