@{
    ViewData["Title"] = "Modificar Cliente";
    @model Cliente

}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Modificar Cliente</title>

    <style>
        .btn-crear {
            background-color: #0E58C4;
            color: #FFFFFF;
            width: 8rem;
            height: 2.5rem;
        }

        .btn-cancelar {
            background-color: #7F7F7F;
            color: #FFFFFF;
            width: 8rem;
            height: 2.5rem;
        }

        .modal-backdrop {
            display: none;
        }
    </style>
</head>

<body>
    <div class="container position-absolute top-50 start-50 translate-middle">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header text-center">
                        <h3 class="card-title"><b>M</b>odificar <b>C</b>liente</h3>
                    </div>
                    <form asp-controller="Cliente" asp-action="ModCliente" method="post">
                        <input type="hidden" value="@Model.IdClientes" name="id" id="idc" />
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="form-group col">
                                    <label for="nombre">Nombre</label>
                                    <input required type="text" class="form-control" id="nombre" placeholder="@Model.Nombre" name="nombre" value="@Model.Nombre">
                                </div>
                                <div class="form-group col">
                                    <label for="apellido">Apellido</label>
                                    <input required type="text" class="form-control" id="apellido" placeholder="@Model.Apellido" name="apellido" value="@Model.Apellido">
                                </div>
                                <div class="form-group col">
                                    <label for="docIdentidad">Documento de Identidad</label>
                                    <input required type="text" class="form-control" id="docIdentidad" placeholder="@Model.Cedula" name="docIdentidad" value="@Model.Cedula">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="form-check col">
                                    <label required class="mb-2" for="sexo">Sexo</label><br />
                                    @if (Model.Sexo.Equals("m"))
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="sexo" id="masculino" value="masculino" checked>
                                            <label class="form-check-label" for="masculino">Masculino</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="sexo" id="feminimo" value="feminimo">
                                            <label class="form-check-label" for="feminimo">Feminimo</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="sexo" id="masculino" value="masculino">
                                            <label class="form-check-label" for="masculino">Masculino</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="sexo" id="feminimo" value="feminimo" checked>
                                            <label class="form-check-label" for="feminimo">Feminimo</label>
                                        </div>
                                    }
                                </div>
                                <div class="form-group col">
                                    <label required for="nacionalidad">Nacionalidad</label>

                                    @{
                                        List<String> paises = new List<String>();
                                        paises.Add("República Dominicana");
                                        paises.Add("Estados Unidos");
                                        paises.Add("Cuba");
                                        paises.Add("Venezuela");
                                        paises.Add("Colombia");
                                        paises.Add("Haití");
                                    }

                                    <select name="nacionalidad" class="form-select" id="nacionalidad">
                                        @foreach (var pais in paises)
                                        {
                                            @if (pais.Equals(Model.Pais))
                                            {
                                                <option selected value="@pais">@pais</option>
                                            }
                                            else
                                            {
                                                <option value="@pais">@pais</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="form-check col">
                                    <label required class="mb-2" for="estadoCivil">Estado Cívil</label><br />
                                    @if (Model.EstadoCivil.Equals("soltero"))
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="soltero" value="soltero" checked>
                                            <label class="form-check-label" for="soltero">Soltero</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="casado" value="casado">
                                            <label class="form-check-label" for="casado">Casado</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="viudo" value="viudo">
                                            <label class="form-check-label" for="viudo">Viudo</label>
                                        </div>
                                    }
                                    else if (Model.EstadoCivil.Equals("casado"))
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="soltero" value="soltero">
                                            <label class="form-check-label" for="soltero">Soltero</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="casado" value="casado" checked>
                                            <label class="form-check-label" for="casado">Casado</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="viudo" value="viudo">
                                            <label class="form-check-label" for="viudo">Viudo</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="soltero" value="soltero">
                                            <label class="form-check-label" for="soltero">Soltero</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="casado" value="casado">
                                            <label class="form-check-label" for="casado">Casado</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="estadoCivil" id="viudo" value="viudo" checked>
                                            <label class="form-check-label" for="viudo">Viudo</label>
                                        </div>
                                    }
                                </div>
                                <div class="form-group col">
                                    <label for="fecha">Fecha de Nacimiento</label>

                                    @{
                                        string dateStr = @Model.Fechanacimiento.ToString();
                                        DateTime date = DateTime.Parse(dateStr);
                                    }

                                    <input required type="date" class="form-control" id="fecha" name="fecha" timezone="-240" value="@date.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                            <!--
                            <div class="row mb-3">
                                <div class="form-group col">
                                    <label for="nombre">Dirección</label>
                                    <input type="text" class="form-control" id="direccion" placeholder="" name="direccion">
                                </div>
                            </div>
                            -->
                            <div class="row mb-3 border-bottom"></div>
                            <div class="row mb-3">
                                <div class="form-group col">
                                    <label for="correo">Correo Electrónico</label>
                                    <input required type="email" class="form-control" id="correo" placeholder="@Model.Correo" name="correo" value="@Model.Correo">
                                </div>
                                <div class="form-group col">
                                    <label for="telefono">Teléfono</label>
                                    <input required type="tel" class="form-control" id="telefono" placeholder="@Model.Telefono" name="telefono" value="@Model.Telefono">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer mb-3">
                            <a href="/Cliente/ListarClientes" class="btn btn-cancelar" style="float: right; margin-right: -0.5rem; margin-bottom: 0.5rem">Cancelar</a>
                            <a class="btn btn-crear" style="float: right; margin-right: 0.5rem;" data-bs-toggle="modal" data-bs-target="#exampleModal">Modificar</a>
                        </div>

                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" style="text-align: center">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel"><b>M</b>odificar <b>C</b>liente</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>¿Desea guardar los cambios?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="Submit" class="btn btn-crear">Confirmar</button>
                                        <button type="button" class="btn btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>